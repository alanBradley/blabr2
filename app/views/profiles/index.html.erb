<p id="notice"><%= notice %></p>

<h1>Listing All Profiles</h1>

<div class="row">
  <% @profiles.each do |profile| %>
    <div class="col-xs-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag profile.avatar.url(:medium), class: 'image'), profile %>
        <%= link_to 'Show', profile , class: "btn btn-default"%>
      </div>
    </div>
  <% end %>
</div>